{
  "name": "backend-boilerplate-seed",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --files --inspect --transpileOnly --ignore-watch node_modules src/app.ts",
    "devd": "yarn dev",
    "lint": "eslint --fix ./src/**",
    "tsnode": "ts-node src/app.ts",
    "start": "yarn tsnode",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "pm2": "pm2 start dist/src/app.js --watch --name mitre-pro",
    "startdist": "yarn build & yarn pm2",
    "typeorm": "ts-node-dev  -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate:create": "yarn typeorm -- migration:create -n",
    "migrate:generate": "yarn typeorm -- migration:generate -n",
    "migrate:up": "yarn typeorm -- migration:run",
    "migrate:down": "yarn typeorm -- migration:revert",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --verbose false",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "jest  --clearCache && jest  --passWithNoTests --silent --runInBand",
    "test:ci": "jest  --passWithNoTests --silent --coverage --runInBand"
  },
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.7",
    "@types/dotenv": "8.2.0",
    "@types/multer": "1.4.4",
    "@types/uuid": "8.3.0",
    "aws-sdk": "2.745.0",
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "cors": "2.8.5",
    "express": "4.17.1",
    "joi": "17.2.1",
    "jsonwebtoken": "8.5.1",
    "moment": "2.29.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.1.4",
    "typeorm": "0.2.25",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/node": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-decorators": "7.10.5",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@types/body-parser": "1.19.0",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.8",
    "@types/jsonwebtoken": "8.5.0",
    "@types/moment": "^2.13.0",
    "@types/node": "14.0.27",
    "@types/sinon": "9.0.5",
    "@types/supertest": "2.0.10",
    "@types/swagger-ui-express": "4.1.2",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "babel-plugin-module-resolver": "4.0.0",
    "babel-plugin-transform-typescript-metadata": "0.3.0",
    "eslint": "7.6.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard-with-typescript": "18.0.2",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "jest": "26.2.2",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "sinon": "9.0.3",
    "supertest": "4.0.2",
    "ts-jest": "26.1.4",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts)": [
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "prettier --write"
    ]
  }
}
